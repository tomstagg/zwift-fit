{
  "compilerOptions": {
    "target": "es2018",
    "lib": ["es2019"],
    "module": "commonjs",
    "moduleResolution": "node",
    "strict": true,
    "outDir": "dist",
    // "rootDir": "./",
    "sourceMap": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "declaration": true,
    "resolveJsonModule": true,
    "types": ["node"]
  },
  "include": ["./src/**/*"]
}
